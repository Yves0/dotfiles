#*********************************************电源管理*************************************
#win+c可以调出选项，你可以选择锁屏(L)，注销(O)，重启(R)，关机(S)，退出选项(Esc),休眠(H)。
set $mode_system  lock(L) logout(O) reboot(R) shutdown(S) exit(Esc) hibernate(H) suspend(P)
bindsym $mod+c mode "$mode_system"
mode "$mode_system" {
    bindsym l exec --no-startup-id lockscreen, mode "default"
    bindsym o exec --no-startup-id i3-msg exit, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym s exec --no-startup-id systemctl poweroff, mode "default"
    bindsym Escape mode "default"
    bindsym h exec --no-startup-id systemctl hibernate,mode "default"
    bindsym p exec --no-startup-id systemctl suspend,mode "default"
}

